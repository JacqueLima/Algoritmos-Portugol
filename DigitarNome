programa
{//Programa pra usuario digitar nome
	  cadeia nome
	funcao inicio()
	{
		
		mostraMensagem()//funcao sem parametro
	}
	funcao mostraMensagem()
	{
		escreva ("Digite seu nome completo: ")
		leia (nome)
	}
}
