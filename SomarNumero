programa
{//Programa pra somar
	real num1,num2,soma
	funcao inicio()
	{
		somarNum()
	}
	funcao somarNum()
	{
		escreva("Digite um número: ")
		leia (num1)
		escreva("Digite outro número: ")
		leia (num2)
		soma=num1+num2
		escreva("A soma dos dois números é: ",soma)
	}
}
